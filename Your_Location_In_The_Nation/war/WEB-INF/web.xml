<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
              http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee">

  <!-- Servlets -->
  
  <servlet>
    <servlet-name>AddNumbersServlet</servlet-name>
    <servlet-class>servlet.AddNumbersServlet</servlet-class>
  </servlet>
  
  
  
  
  <servlet>
    <servlet-name>QuestionsServlet</servlet-name>
    <servlet-class>servlet.QuestionsServlet</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>IndexServlet</servlet-name>
    <servlet-class>servlet.IndexServlet</servlet-class>
  </servlet>
 
   <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>servlet.LoginServlet</servlet-class>
  </servlet>
  
   <servlet>
    <servlet-name>PopularlocationServlet</servlet-name>
    <servlet-class>servlet.PopularlocationServlet</servlet-class>
  </servlet>
  
   <servlet>
    <servlet-name>SavepageServletServlet</servlet-name>
    <servlet-class>servlet.SavepageServletServlet</servlet-class>
  </servlet>
  

  <!-- Servlet mappings -->
  
  <servlet-mapping>
    <servlet-name>AddNumbersServlet</servlet-name>
    <url-pattern>/addNumbers</url-pattern>
  </servlet-mapping>
  
    
  <servlet-mapping>
    <servlet-name>IndexServlet</servlet-name>
    <url-pattern>/index</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>QuestionsServlet</servlet-name>
    <url-pattern>/questions</url-pattern>
  </servlet-mapping>
  
    <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/Login</url-pattern>
  </servlet-mapping>
  
    <servlet-mapping>
    <servlet-name>SavepageServlet</servlet-name>
    <url-pattern>/Save Page</url-pattern>
  </servlet-mapping>
  
    <servlet-mapping>
    <servlet-name>PopularlocationServlet</servlet-name>
    <url-pattern>/Popular Locations</url-pattern>
  </servlet-mapping>
 
  <welcome-file-list>
    <welcome-file>Index.html</welcome-file>
  </welcome-file-list>
  
  
  
 
  
  
</web-app>
